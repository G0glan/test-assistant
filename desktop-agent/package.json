{
  "name": "desktop-agent",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/index.js",
  "description": "Cross-platform autonomous desktop agent with floating chat UI",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on tcp:127.0.0.1:5173 dist/main/index.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron dist/main/index.js",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron dist/main/index.js"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.5.0",
    "electron": "^32.2.0",
    "node-cron": "^3.0.3",
    "openai": "^4.76.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "screenshot-desktop": "^1.15.1",
    "ws": "^8.19.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.9",
    "@types/react": "^18.3.19",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  }
}
